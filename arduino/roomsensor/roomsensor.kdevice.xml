            </CommObject>
            <CommObject Id="6" IdName="tempMinLimitReached">
                <Name>Temp</Name>
                <Function>Min limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="7" IdName="tempMaxLimitReached">
                <Name>Temp</Name>
                <Function>Max limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="8" IdName="rhValue">
                <Name>Humidity</Name>
                <Function>Measured value</Function>
                <DataPointType>9.007</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="9" IdName="rhMinLimitReached">
                <Name>Humidity</Name>
                <Function>Min limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="10" IdName="rhMaxLimitReached">
                <Name>Humidity</Name>
                <Function>Max limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="11" IdName="pressValue">
                <Name>Pressure</Name>
                <Function>Measured value</Function>
                <DataPointType>9.006</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="12" IdName="pressMinLimitReached">
                <Name>Pressure</Name>
                <Function>Min limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="13" IdName="pressMaxLimitReached">
                <Name>Pressure</Name>
                <Function>Max limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>

            <CommObject Id="14" IdName="luxValue">
                <Name>Lux</Name>
                <Function>Value</Function>
                <DataPointType>9.004</DataPointType>
                <Flags>52</Flags>
            </CommObject>
            <CommObject Id="15" IdName="luxMaxLimitReached">
                <Name>Lux</Name>
                <Function>Max limit reached</Function>
                <DataPointType>1.001</DataPointType>
                <Flags>52</Flags>
            </CommObject>

        </CommObjects>
        <Dependencies>
